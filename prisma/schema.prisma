generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  role      String   @default("BORROWER") // BORROWER, ADMIN, CASEWORKER, SUPERVISOR
  active    Boolean  @default(true)
  createdAt DateTime @default(now())

  assignedApplications Application[] @relation("AssignedCaseworker")
  assignmentsReceived  Assignment[]  @relation("AssignedTo")
  assignmentsMade      Assignment[]  @relation("AssignedBy")
}

model Application {
  id            String    @id @default(uuid())
  status        String    @default("draft")
  data          String    @default("{}") // JSON string - URLA application data
  borrowers     String    @default("[]") // JSON string - array of borrowers
  assignedToId  String?
  assignedTo    User?     @relation("AssignedCaseworker", fields: [assignedToId], references: [id])
  assignedAt    DateTime?
  priority      String    @default("normal") // low, normal, high, urgent
  slaDeadline   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  documents     Document[]
  assignments   Assignment[]
}

model Assignment {
  id            String      @id @default(uuid())
  application   Application @relation(fields: [applicationId], references: [id])
  applicationId String
  assignedTo    User        @relation("AssignedTo", fields: [assignedToId], references: [id])
  assignedToId  String
  assignedByUser User       @relation("AssignedBy", fields: [assignedBy], references: [id])
  assignedBy    String
  action        String      // assigned, reassigned, unassigned, completed
  note          String?
  createdAt     DateTime    @default(now())
}

model Document {
  id            String   @id @default(uuid())
  application   Application @relation(fields: [applicationId], references: [id])
  applicationId String
  filename      String
  contentType   String
  path          String
  documentType  String   @default("other")
  createdAt     DateTime @default(now())

  // OCR Processing Fields
  ocrStatus            String    @default("pending") // pending | processing | completed | failed
  ocrProvider          String?   // claude | tesseract | textract | mock
  extractedData        String?   // JSON string: raw extraction output
  extractedFields      String?   // JSON string: normalized field map
  extractionConfidence Float?    // 0-100 overall confidence
  fieldConfidences     String?   // JSON string: per-field confidence scores
  processingError      String?   // Error message if failed
  processedAt          DateTime?
  retryCount           Int       @default(0)
}
